<?xml version="1.0" encoding="utf-8"?>
<com.baidu.duer.files.ui.CheckableForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCompressLayout"
    android:layout_width="wrap_content"
    android:layout_height="34dp"
    android:gravity="center_vertical"
    android:layout_marginEnd="10dp"
    android:duplicateParentState="true"
    android:background="@drawable/compress_text_bg">

    <TextView
        android:id="@+id/compressWayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:duplicateParentState="true"
        android:textColor="@color/bread_crumb_path_text_normal_color"
        android:textSize="14sp"
        tools:text=".zip"/>

</com.baidu.duer.files.ui.CheckableForegroundLinearLayout>